generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "sqlite"
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // url      = "file:./dev.db"
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  createdAt DateTime   @default(now())
  question  Question[]
}

model Question {
  id        Int      @id @default(autoincrement())
  question  String
  answer    Boolean
  creatorId Int
  createdAt DateTime @default(now())
  creator   User     @relation(fields: [creatorId], references: [id])
}
